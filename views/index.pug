extends layout.pug

block content
  .header
    h1= title
    h2
      | Better 
      a(href='https://brew.sh') Homebrew
      |  Search
    form.search(action="/", method="GET")
      div
        input(type="text" name="q" autofocus placeholder="..." value=q)
        input(type="submit" value="Search")
      //- .keys
      //-   p Casks
      //-   p MacOS Formula

  .brew-list
    //- - var values = [{name: "slackcat", type: "formula", desc:"Command-line utility for posting snippets to Slack", link: "https://github.com/vektorlab/slackcat"}, {name: "slack", type: "cask", desc:"Team communication and collaboration software", link: "https://slack.com"}];
    each val in values
      .brew-item
        +brew(val)
    //- p Welcome to #{title}



mixin brew(item)
  .heading
    h2= item.name
    div(class=item.type)
      p= item.type
  .codeblock
    //- - var code = (item.type === "cask") ? (`brew cask install ${item.name}`) : (`brew install ${item.name}`)
    - var cask = (item.type === "cask") ? true : false
    +codeblock(item.name, cask)
  p= item.desc
  a(href=item.link)= item.link

mixin codeblock(name, cask)
  .code
    if cask
      p#toCopy
        span#indicator $ 
        | brew cask 
        span#install install 
        = name
    else
      p#toCopy
        span#indicator $ 
        | brew  
        span#install install 
        = name
